<div class="container">
<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
      <h1>New Restaurant</h1>

         <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name  %>
        <%= f.input :address  %>
        <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"]  %>
       <p> <%= f.submit "Add Restaurant", class: "btn btn-primary" %></p>
      <% end %>

    <br>

    <p><%= link_to 'Back to restaurant List', restaurants_path %><p>
  </div>
</div>
</div>
