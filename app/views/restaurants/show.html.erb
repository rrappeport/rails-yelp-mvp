<div class="container">
<div class="row">
  <div class="col-xs-offset-3 col-xs-6">

    <h2><%= @restaurant.name %><span class="small"><%= link_to "Edit", edit_restaurant_path %>
    <p><%= @restaurant.address %></p>

    <%= link_to restaurant_path(@restaurant),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash-o"></i>
          <% end  %></span></h2>
      <% @reviews.each do |review| %>
      <p><%= review.content %> - <span><%= review.rating %></span> </p><hr>
      <% end  %>


    <%= link_to 'Review Restaurant', new_restaurant_review_path(@restaurant) %>

    <%= link_to 'Back to restaurant List', restaurants_path %>
  </div>
</div>
</div>
