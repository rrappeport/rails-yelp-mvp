<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <h1>New Review - <%= @restaurant.name %></h1>

      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content  %>
        <label><%= "Rating" %></label><br>
        <%= f.collection_radio_buttons :rating, [[0], [1], [2], [3], [4], [5]], :last, :first, boolean_style: :inline do |b| %>
          <%= b.radio_button %>
          <%= b.label %>
          &nbsp; &nbsp;
       <% end %>

       <p> <%= f.submit "Add Review", class: "btn btn-primary" %></p>
      <% end %>

      <p><%= link_to 'Back to restaurant List', restaurants_path %><p>
    </div>
  </div>
</div>
